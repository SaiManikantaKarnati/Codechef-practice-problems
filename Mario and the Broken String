# Mario and the Broken String

# cook your dish here
cases = int(input())
for _ in range(cases):
    a,b =[],[]
    n = int(input())
    s = input()
    for i in range(0,n//2):
        a.append(s[i])
    for i in range(n//2,n):
        b.append(s[i])
    if a==b:
        print("YES")
    else:
        print("NO")
    
